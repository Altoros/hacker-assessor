<nav>
  <div class="logo">
    <%= link_to root_path do %>
      <span class="logo--hacker">HACKER</span>
      <span class="logo--assessor">ASSESSOR</span>
    <% end %>
  </div>
  <% if current_hacker %>
    <menu>
      <%= link_to current_hacker_gravatar %>
      <%= link_to 'LOGOUT',signout_path, method: :delete %>
      <%= link_to 'ACQUIREMENTS', acquirements_path %>
      <%= link_to 'SKILLS', skills_path %>
      <%= link_to 'CAREERS', careers_path %>
      <%= link_to 'INVITE', new_hacker_path %>
    </menu>
  <% else %>
    <div class="form--login">
      <%= form_tag login_path do |f| %>
        <%= text_field_tag :email, nil, placeholder: 'email' %>
        <%= password_field_tag :password, nil, placeholder: 'password' %>
        <a href="#">Forgot your password?</a>
        <%= submit_tag 'SIGN IN' %>
      <% end %>
    </div>
  <% end %>
</nav>
