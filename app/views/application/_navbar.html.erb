<nav>
  <!-- img src="assets/logo.svg" alt="Hacker Assessor" class="logo" -->
  <%= link_to root_path, class: 'button' do %>
    <h1 class="logo">Hacker Assessor</h1>
  <% end %>
  <% flash.each do |name, msg| %>
    <%= content_tag :div, msg, class: name %>
  <% end %>

  <% if current_hacker %>
    <%= link_to 'Acquirements', acquirements_path, class: 'button' %>
    <%= link_to 'Careers', careers_path, class: 'button' %>
    <%= link_to 'Invite', new_hacker_path, class: 'button' %>
    <%= link_to 'Hackers List', hackers_path, class: 'button' %>
    <%= link_to 'Skills', skills_path, class: 'button' %>
    <%= link_to current_hacker_gravatar + 'Logout',
                signout_path, method: :delete, class: 'button' %>
  <% else %>
    <%= form_tag login_path do |f| %>
      <%= text_field_tag :email, nil, placeholder: 'Email' %>
      <%= password_field_tag :password, nil, placeholder: 'Password' %>
      <%= submit_tag 'Sign in' %>
      <a href="#">Forgot your password?</a>
    <% end %>
  <% end %>
</nav>
