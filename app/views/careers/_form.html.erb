<%= form_for(@career) do |f| %>
  <% if @career.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@career.errors.count, "error") %> prohibited this career from being saved:</h2>

      <ul>
      <% @career.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.text_field :name, required: true, :placeholder => :name %>
  </div>
  <div class="field">
    <%= f.text_area :description, :placeholder => :description %>
  </div>
  <div class="field">
    <label for="career_requirements">
      <%= f.file_field :requirements, accept: 'text/csv' %>
      Bulk upload requirements (CSV)
    </label>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
