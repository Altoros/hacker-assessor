<h1>Listing Hackers</h1>

<table>
  <thead>
    <tr>
      <th>Hacker</th>
      <th>Career</th>
      <th>Seniority</th>
      <th colspan="2"></th>
    </tr>
  </thead>

  <tbody>
    <% @hackers.each do |hacker| %>
      <tr>
        <td><%= link_to hacker.name, hacker_path(hacker) %></td>
        <td><%= hacker.career.name %></td>
        <td><%= hacker.seniority %></td>
        <td><%= link_to 'Edit', edit_hacker_path(hacker) %></td>
        <td><%= link_to 'Destroy', hacker, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
