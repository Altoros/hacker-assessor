task default: 'test'

task :test do
  require 'cutest'
  require './tests/test_helper'
  Cutest.run Dir['tests/models_relations.rb']
end

namespace 'seed' do
  require_relative './app'
  require_relative './lib/migration'

  desc 'Load Hacker, Skill and Seniority into the DB'
  task :all do
    puts '==> Loading data into the DB'
    Migrations.all
  end

  desc 'Delete all data in the DB'
  task :delete_all do
    Ohm.flush
  end
end
